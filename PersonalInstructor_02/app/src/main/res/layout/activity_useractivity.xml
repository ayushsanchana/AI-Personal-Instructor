<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/don"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome "
                android:id="@+id/tt"
                android:textSize="20sp"
                android:textColor="#ffff"/>

             <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/immid"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/user"
                android:layout_alignParentRight="true"
                app:civ_border_width="2dp"
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Mail   :  "
                    android:textSize="15sp"
                    android:textColor="#ffff"
                    />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAIL   :"
                    android:textSize="15sp"
                    android:textColor="#ffff"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Weight   :  "
                    android:textSize="15sp"
                    android:textColor="#ffff"
                    />

                <TextView
                    android:id="@+id/weight"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WEIGHT   :"
                    android:textSize="15sp"
                    android:textColor="#ffff"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Height   :  "
                    android:textSize="15sp"
                    android:textColor="#ffff"
                    />

                <TextView
                    android:id="@+id/height"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HEIGHT   :"
                    android:textSize="15sp"
                    android:textColor="#ffff"/>

            </LinearLayout>







        </RelativeLayout>

        <GridLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:columnCount="3"
            android:rowCount="3"
            >

            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/ub1"
                android:layout_margin="3dp"

                />

            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@drawable/ub2"
                android:layout_margin="3dp"/>

            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/ub3"
                android:layout_row="2"
                android:layout_column="2"

                android:layout_margin="3dp"

                />

            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@drawable/ub4"
                android:layout_margin="3dp"/>


        </GridLayout>



    </LinearLayout>








</RelativeLayout>